{
  "name": "jsonstr",
  "displayName": "JSON String Converter",
  "description": "A powerful VS Code extension for detecting and converting JSON format text",
  "version": "1.0.13",
  "publisher": "t0my0ung",
  "icon": "media/icon.jpg",
  "keywords": [
    "json",
    "converter",
    "formatter",
    "string",
    "vscode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/t0my0ung/jsonstr.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonstr.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "jsonstr.askQuestion",
        "category": "jsonstr",
        "title": "Ask Question"
      },
      {
        "command": "jsonstr.checkSelectedText",
        "category": "jsonstr",
        "title": "Check if selected text is JSON"
      },
      {
        "command": "jsonstr.convertJson",
        "category": "jsonstr",
        "title": "Convert JSON format"
      },
      {
        "command": "jsonstr.test",
        "category": "jsonstr",
        "title": "Test extension"
      },
      {
        "command": "jsonstr.toggleAutoDetection",
        "category": "jsonstr",
        "title": "Toggle auto-detection mode"
      }
    ],
    "keybindings": [
      {
        "command": "jsonstr.checkSelectedText",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "JSON String Converter",
      "properties": {
        "jsonstr.autoDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic JSON format detection (auto-popup when text is selected)"
        },
        "jsonstr.preserveIndentation": {
          "type": "boolean",
          "default": true,
          "description": "Preserve original indentation format"
        },
        "jsonstr.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notification messages for successful conversions"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "jsonstr.convertJson",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "jsonstr.toggleAutoDetection",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build\"",
    "package": "npm run compile && npx vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "version": "node scripts/version.js",
    "version:current": "node scripts/version.js --current",
    "debug:workflow": "node scripts/debug-workflow.js",
    "check:vsix": "node scripts/check-vsix.js",
    "test:pat": "node scripts/test-pat.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.1",
    "rollup-plugin-svelte": "^7.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^5.36.13",
    "svelte-check": "^4.3.0",
    "svelte-preprocess": "^6.0.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "license": "CC0-1.0",
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "dependencies": {
    "ovsx": "^0.10.5"
  }
}
